#include<iostream>
using namespace std;
class flight{
        int fno;
        float dist,fuel;
        char dest[20];
        void cal_fuel(){
                if(dist>2000){
                        fuel=2200;
                }
                else if(dist>1000){
                        fuel=1100;
                }
                else{
                        fuel=500;
                }
        }
        public:
                flight()
                {
                        dist=500;
                }
                void info(){
                        cout<<"enter the flight number: ";
                        cin>>fno;
                        cout<<"Enter the destination: ";
                        cin>>dest;
                        cout<<"Enter the distance: ";
                        cin>>dist;
                        cal_fuel();
                }
                void dis_info(){
                        cout<<"your flight number is: "<<fno<<endl;
                        cout<<"your destination is: "<<dest<<endl;
                        cout<<"the total distance is: "<<dist<<endl;
                        cout<<"The fuel in your flight is: "<<fuel<<endl;
                }


};
int main(){
        flight f;
        f.info();
        f.dis_info();


}
