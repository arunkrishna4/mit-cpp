// Online C++ compiler to run C++ program online
#include <iostream>
using namespace std;

class comp{
    int real,img;
    public:
        void inp(){
            cout<<"enter the real and img part : "<<endl;
            cin>>real>>img;
        }
        
        comp operator +(comp obj){
            comp temp;
            temp.real=real+obj.real;
            temp.img=img+obj.img;
            return temp;
        }
        void res(){
            cout<<real<<'+'<<img<<'i';
        }
};
int main() {
    // Write C++ code here
    comp c1,c2,c3;
    cout<<"enter the 1st complex number"<<endl;
    c1.inp();
    cout<<"enter the 2nd complex number"<<endl;
    c2.inp();
    c3=c1+c2;
    c3.res();

    return 0;
}
