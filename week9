#include<iostream>
using namespace std;
class emp{
        int id;
        char name[20];
        public:
        virtual void inp(){
                cout<<"enter the employee ID: ";
                cin>>id;
                cout<<"enter the employee name: ";
                cin>>name;
        }
        virtual void disp(){
                cout<<"Employee ID: "<<id<<endl;
                cout<<"Employee Name: "<<name<<endl;
        }
};
class laborer:public emp{
        int sal;
        public:
                virtual void inp(){
                        cout<<"enter the salary for the laborer: ";
                        cin>>sal;
                }
                virtual void disp(){
                        cout<<"Salary: "<<sal<<endl;
                }
};
class edu{
        char deg[20];
        public:
                virtual void inp(){
                       cout<<"Enter your degree: ";
                        cin>>deg;
                }
                virtual void disp(){
                        cout<<"Degree: "<<deg<<endl;
                }
};
class manager:public edu,public emp{
        int mid;
        char mname[10];
        public:
                void inp(){
                        emp::inp();
                        edu::inp();
                        cout<<"enter manager ID: ";
                        cin>>mid;
                        cout<<"enter manager name: ";
                        cin>>mname;
                }
                void disp(){
                        emp::disp();
                        edu::disp();
                        cout<<"Manager ID: "<<mid<<endl;
                        cout<<"Mabager Name: "<<mname<<endl;
                }
};
class sci:public emp,public edu{
        char des[20];
        public:
                void inp(){
                        emp::inp();
                        edu::inp();
                        cout<<"enter the designation: ";
                        cin>>des;
                }
                void disp(){
                        emp::disp();
                        edu::disp();
                        cout<<"Designation: "<<des<<endl;
                }
};
int main(){
        emp *emp;
        edu *edu;
        sci s;
        laborer l;
        manager m;
        int ch;
        do
        {
                cout<<"1.laborer"<<endl;
                cout<<"2.scientist"<<endl;
                cout<<"3.manager"<<endl;
                cout<<"Enter your choice: ";
                cin>>ch;
                switch(ch){
                        case 1:
                                emp=&l;
                                emp->inp();
                                emp->disp();
                                break;
                        case 2:
                                edu=&s;;
                                edu->inp();
                                edu->disp();
                                break;
                        case 3:
                                emp=&m;
                                emp->inp();
                                emp->disp();
                                break;
                        default:
                                exit(0);
                }
        }
        while(ch!=0);
        return 0;

}
