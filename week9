#include<iostream>
using namespace std;
class shape{
        public:
                double l1,l2;
                void get_data(){
                        cout<<"enter 1st length: ";
                        cin>>l1;
                        cout<<"enter 2nd length: ";
                        cin>>l2;
                }
                virtual void disp_area()=0;

};
class rectangle:public shape{
        double area;
        public:
                void disp_area(){
                        area=l1*l2;
                        cout<<"Area of rectangle is: "<<area<<endl;
                }
};

class triangle:public shape{
        double area;
        public:
                void disp_area(){
                        area=0.5*l1*l2;
                        cout<<"Area of triangle is: "<<area<<endl;
                }
};
int main(){
        rectangle r;
        triangle t;
        int ch;
        do
        {
                cout<<"1.rectangle"<<endl;
                cout<<"2.Triangle"<<endl;
                cout<<"Enter your choice: "<<endl;
                cin>>ch;
                switch(ch){
                        case 1:
                                r.get_data();
                                r.disp_area();
                                break;
                        case 2:
                                t.get_data();
                                t.disp_area();
                                break;
                        default:
                                exit(0);
                }
        }
        while(ch!=0);

        return 0;
}
